<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Write a new blog post...</div>

    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Blog Title</label>
            <input type="text" name="blog[title]" placeholder="Title">
        </div>
        <div class="field">
            <label>Featured Image</label>
            <input type="text" name="blog[image]" placeholder="Image">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" placeholder="Blog post here..."></textarea>
        </div>
        <div class="field">
            <input class="ui violet big basic button" type="submit">
        </div>
    </form>


</div>

<% include ./partials/footer %>